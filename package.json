{
  "name": "discord-forum-api",
  "version": "0.1.0",
  "private": true,
  "description": "API-first Discord forum/FAQ/blog engine that syncs Discord server content to a database and exposes it via REST API",
  "author": "KevinTrinh1227",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:int": "turbo run test:int",
    "test:cov": "turbo run test:cov",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @discord-forum-api/db generate",
    "db:migrate": "pnpm --filter @discord-forum-api/db migrate",
    "db:push": "pnpm --filter @discord-forum-api/db push",
    "db:studio": "pnpm --filter @discord-forum-api/db studio",
    "docs:dev": "pnpm --filter @discord-forum-api/docs dev",
    "docs:build": "pnpm --filter @discord-forum-api/docs build",
    "docs:preview": "pnpm --filter @discord-forum-api/docs preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.17.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  }
}
