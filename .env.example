# Discord Bot Configuration
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Bot Behavior
# Whether to sync messages from bots (default: true)
SYNC_BOT_MESSAGES=true

# Database Configuration
# Options: sqlite, turso, postgres
DATABASE_TYPE=sqlite

# SQLite (local development)
DATABASE_PATH=./data/discord-forum.db

# Turso (production)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# PostgreSQL (alternative production)
DATABASE_URL=

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=7d

# OAuth Callback URL
OAUTH_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Redis (optional - for rate limiting in production)
REDIS_URL=

# Sentry (optional - for error tracking)
SENTRY_DSN=
