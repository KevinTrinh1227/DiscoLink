---
const links = {
  product: [
    { href: '/quickstart', label: 'Quickstart' },
    { href: '/features', label: 'Features' },
    { href: '/use-cases', label: 'Use Cases' },
    { href: '/templates', label: 'Templates' },
  ],
  resources: [
    { href: 'https://docs.discolink.site', label: 'Documentation', external: true },
    { href: 'https://demo.discolink.site', label: 'Live Demos', external: true },
  ],
  links: [
    { href: 'https://github.com/KevinTrinh1227/discolink', label: 'GitHub', external: true },
    { href: 'https://github.com/KevinTrinh1227/discolink/issues', label: 'Report Issue', external: true },
  ],
};
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <span class="logo">DiscoLink</span>
        <p>Open-source platform for syncing Discord content. Build knowledge bases, integrate with your apps via REST API, or export static sites. Use it however you want.</p>
        <div class="github-stats">
          <a href="https://github.com/KevinTrinh1227/discolink/stargazers" target="_blank" rel="noopener" class="stat">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25z"/>
            </svg>
            <span id="star-count">--</span> stars
          </a>
          <a href="https://github.com/KevinTrinh1227/discolink/network/members" target="_blank" rel="noopener" class="stat">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z"/>
            </svg>
            <span id="fork-count">--</span> forks
          </a>
        </div>
      </div>

      <div class="footer-links">
        <div class="link-group">
          <h4>Product</h4>
          {links.product.map((link) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </div>
        <div class="link-group">
          <h4>Resources</h4>
          {links.resources.map((link) => (
            link.external ? (
              <a href={link.href} target="_blank" rel="noopener">{link.label}</a>
            ) : (
              <a href={link.href}>{link.label}</a>
            )
          ))}
        </div>
        <div class="link-group">
          <h4>Links</h4>
          {links.links.map((link) => (
            <a href={link.href} target="_blank" rel="noopener">{link.label}</a>
          ))}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-meta">
        <span class="version-badge" id="footer-version">v--</span>
        <span class="separator">Â·</span>
        <span>Built by <a href="https://kevintrinh.dev" target="_blank" rel="noopener">Kevin Trinh</a></span>
      </div>
      <p>&copy; {new Date().getFullYear()} DiscoLink. MIT License.</p>
      <p class="disclaimer">DiscoLink is not affiliated with, endorsed by, or connected to Discord Inc.</p>
    </div>
  </div>
</footer>

<script>
  // Fetch GitHub stats client-side (no API key needed for public repos)
  fetch('https://api.github.com/repos/KevinTrinh1227/discolink')
    .then(res => res.json())
    .then(data => {
      const starEl = document.getElementById('star-count');
      const forkEl = document.getElementById('fork-count');
      if (starEl && data.stargazers_count !== undefined) {
        starEl.textContent = data.stargazers_count.toLocaleString();
      }
      if (forkEl && data.forks_count !== undefined) {
        forkEl.textContent = data.forks_count.toLocaleString();
      }
    })
    .catch(() => {
      // Keep showing -- if fetch fails
    });

  // Fetch latest release version
  fetch('https://api.github.com/repos/KevinTrinh1227/discolink/releases/latest')
    .then(res => res.json())
    .then(data => {
      const versionEl = document.getElementById('footer-version');
      if (versionEl && data.tag_name) {
        versionEl.textContent = data.tag_name;
      }
    })
    .catch(() => {
      // Keep showing v-- if fetch fails
    });
</script>

<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border);
    padding: 4rem 0 2rem;
    margin-top: 6rem;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 4rem;
  }
  .footer-brand {
    max-width: 320px;
  }
  .logo {
    font-weight: 700;
    font-size: 1.25rem;
    display: block;
    margin-bottom: 1rem;
  }
  .footer-brand > p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }
  .github-stats {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  .github-stats .stat {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    transition: color 0.2s;
  }
  .github-stats .stat:hover {
    color: var(--text);
    text-decoration: none;
  }
  .github-stats svg {
    opacity: 0.7;
  }
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .link-group h4 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }
  .link-group a {
    display: block;
    color: var(--text);
    font-size: 0.95rem;
    padding: 0.3rem 0;
  }
  .link-group a:hover {
    color: var(--accent);
  }
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  .footer-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
  }
  .footer-meta a {
    color: var(--accent);
    transition: opacity 0.2s;
  }
  .footer-meta a:hover {
    opacity: 0.8;
  }
  .version-badge {
    background: var(--bg-card);
    border: 1px solid var(--border);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.8rem;
  }
  .separator {
    opacity: 0.4;
  }
  .disclaimer {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    opacity: 0.7;
  }
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
