---
const navLinks = [
  { href: '/quickstart', label: 'Quickstart' },
  { href: '/features', label: 'Features' },
  { href: '/use-cases', label: 'Use Cases', hasDropdown: true },
  { href: 'https://github.com/KevinTrinh1227/discolink', label: 'GitHub', external: true },
];

const useCases = [
  { href: '/use-cases/faq', icon: '‚ùì', label: 'FAQ & Support', description: 'Searchable FAQ from threads' },
  { href: '/use-cases/knowledge-base', icon: 'üìö', label: 'Knowledge Base', description: 'Structured documentation' },
  { href: '/use-cases/changelog', icon: 'üìã', label: 'Changelog', description: 'Updates & announcements' },
  { href: '/use-cases/blog', icon: '‚úçÔ∏è', label: 'Community Blog', description: 'Discussions to blog posts' },
  { href: '/use-cases/api-integration', icon: '‚öôÔ∏è', label: 'API Integration', description: 'Custom apps via REST API' },
];
---

<header class="header">
  <div class="container">
    <a href="/" class="logo">
      <svg class="logo-icon" width="28" height="28" viewBox="0 0 32 32" fill="none">
        <circle cx="16" cy="16" r="14" fill="url(#logoGrad)" />
        <g opacity="0.9">
          <rect x="11" y="6" width="4" height="3" rx="0.5" fill="white" opacity="0.85"/>
          <rect x="16" y="7" width="3" height="2.5" rx="0.5" fill="white" opacity="0.7"/>
          <rect x="7" y="11" width="4" height="3.5" rx="0.5" fill="white" opacity="0.8"/>
          <rect x="12" y="11" width="5" height="4" rx="0.5" fill="white" opacity="0.95"/>
          <rect x="18" y="11" width="4" height="3.5" rx="0.5" fill="white" opacity="0.75"/>
          <rect x="6" y="16" width="4" height="4" rx="0.5" fill="white" opacity="0.7"/>
          <rect x="11" y="16" width="5" height="4.5" rx="0.5" fill="white" opacity="1"/>
          <rect x="17" y="16" width="5" height="4" rx="0.5" fill="white" opacity="0.85"/>
          <rect x="23" y="17" width="3" height="3" rx="0.5" fill="white" opacity="0.6"/>
          <rect x="9" y="22" width="4" height="3" rx="0.5" fill="white" opacity="0.75"/>
          <rect x="14" y="22" width="4" height="3" rx="0.5" fill="white" opacity="0.8"/>
          <rect x="19" y="23" width="3" height="2.5" rx="0.5" fill="white" opacity="0.65"/>
        </g>
        <circle cx="26" cy="8" r="1.5" fill="white" opacity="0.9"/>
        <defs>
          <linearGradient id="logoGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#8B5CF6"/>
            <stop offset="50%" stop-color="#6366F1"/>
            <stop offset="100%" stop-color="#3B82F6"/>
          </linearGradient>
        </defs>
      </svg>
      <span class="logo-text">DiscoLink</span>
    </a>

    <nav class="nav-center">
      {navLinks.map((link) => (
        link.hasDropdown ? (
          <div class="dropdown">
            <a href={link.href} class="nav-link dropdown-trigger">
              {link.label}
              <svg width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                <path d="M2.5 4.5L6 8L9.5 4.5" stroke="currentColor" stroke-width="1.5" fill="none"/>
              </svg>
            </a>
            <div class="dropdown-menu">
              {useCases.map((useCase) => (
                <a href={useCase.href} class="dropdown-item">
                  <span class="dropdown-item-icon">{useCase.icon}</span>
                  <div class="dropdown-item-content">
                    <span class="dropdown-item-label">{useCase.label}</span>
                    <span class="dropdown-item-desc">{useCase.description}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ) : link.external ? (
          <a href={link.href} class="nav-link" target="_blank" rel="noopener">{link.label}</a>
        ) : (
          <a href={link.href} class="nav-link">{link.label}</a>
        )
      ))}
    </nav>

    <div class="nav-right">
      <a href="https://docs.discolink.dev" class="docs-link" target="_blank" rel="noopener">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
        </svg>
        <span>Docs</span>
      </a>
      <a href="/quickstart" class="cta-button">Get Started</a>
    </div>

    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 12h18M3 6h18M3 18h18"/>
      </svg>
    </button>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    flex-shrink: 0;
  }
  .logo-icon {
    flex-shrink: 0;
  }
  .logo-text {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text);
  }
  .logo:hover {
    text-decoration: none;
  }

  /* Centered nav */
  .nav-center {
    display: flex;
    align-items: center;
    gap: 2rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
  .nav-link {
    color: var(--text-secondary);
    font-size: 0.95rem;
    transition: color 0.2s;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  .nav-link:hover {
    color: var(--text);
    text-decoration: none;
  }

  /* Dropdown */
  .dropdown {
    position: relative;
  }
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 0.75rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 0.5rem;
    min-width: 260px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s, visibility 0.2s;
    box-shadow: 0 10px 40px rgba(0,0,0,0.3);
  }
  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
  }
  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 0.75rem;
    border-radius: 8px;
    transition: background 0.2s;
  }
  .dropdown-item:hover {
    background: var(--bg-tertiary);
    text-decoration: none;
  }
  .dropdown-item-icon {
    font-size: 1.1rem;
    flex-shrink: 0;
  }
  .dropdown-item-content {
    display: flex;
    flex-direction: column;
  }
  .dropdown-item-label {
    font-weight: 500;
    font-size: 0.9rem;
    color: var(--text);
  }
  .dropdown-item-desc {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }

  /* Right side */
  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }
  .docs-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    transition: color 0.2s;
  }
  .docs-link:hover {
    color: var(--text);
    text-decoration: none;
  }
  .cta-button {
    background: var(--accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 500;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .cta-button:hover {
    text-decoration: none;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px var(--accent-glow);
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--text);
    cursor: pointer;
  }

  @media (max-width: 900px) {
    .nav-center {
      display: none;
    }
    .nav-right {
      display: none;
    }
    .mobile-menu-btn {
      display: block;
    }
  }
</style>
