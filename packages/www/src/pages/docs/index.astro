---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const sections = [
  {
    title: 'Getting Started',
    icon: 'ðŸš€',
    links: [
      { href: '/quickstart', label: 'Quickstart', description: 'Set up DiscoLink in 5 minutes' },
      { href: '/docs/guides', label: 'Guides', description: 'Step-by-step tutorials' },
    ],
  },
  {
    title: 'Reference',
    icon: 'ðŸ“–',
    links: [
      { href: '/docs/api', label: 'API Reference', description: 'REST API endpoints and schemas' },
      { href: '/docs/cli', label: 'CLI Reference', description: 'Command-line tool documentation' },
    ],
  },
  {
    title: 'Templates',
    icon: 'ðŸŽ¨',
    links: [
      { href: '/templates', label: 'Template Gallery', description: 'Pre-built templates for common use cases' },
      { href: '/use-cases', label: 'Use Cases', description: 'Examples of what you can build' },
    ],
  },
];
---

<BaseLayout title="Documentation - DiscoLink">
  <Header />

  <main>
    <div class="container">
      <header class="page-header">
        <h1>Documentation</h1>
        <p>Everything you need to build with DiscoLink.</p>
      </header>

      <div class="sections-grid">
        {sections.map((section) => (
          <div class="section">
            <h2><span class="section-icon">{section.icon}</span> {section.title}</h2>
            <div class="links">
              {section.links.map((link) => (
                <a href={link.href} class="doc-link">
                  <span class="link-label">{link.label}</span>
                  <span class="link-desc">{link.description}</span>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>

      <section class="quick-links">
        <h2>Quick Links</h2>
        <div class="quick-links-grid">
          <a href="https://github.com/KevinTrinh1227/discolink" target="_blank" rel="noopener" class="quick-link">
            <span class="quick-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </span>
            <span class="quick-label">GitHub Repository</span>
          </a>
          <a href="https://github.com/KevinTrinh1227/discolink/issues" target="_blank" rel="noopener" class="quick-link">
            <span class="quick-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 16v-4M12 8h.01"/>
              </svg>
            </span>
            <span class="quick-label">Report an Issue</span>
          </a>
          <a href="/features" class="quick-link">
            <span class="quick-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </span>
            <span class="quick-label">Feature List</span>
          </a>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  main {
    padding-top: 120px;
    padding-bottom: 4rem;
  }
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .sections-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }
  .section h2 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .section-icon {
    font-size: 1.1rem;
  }
  .links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .doc-link {
    display: block;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1rem;
    transition: all 0.2s;
  }
  .doc-link:hover {
    border-color: var(--accent);
    text-decoration: none;
  }
  .link-label {
    display: block;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.25rem;
  }
  .link-desc {
    display: block;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .quick-links h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  .quick-links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }
  .quick-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 1rem;
    color: var(--text);
    transition: all 0.2s;
  }
  .quick-link:hover {
    border-color: var(--accent);
    text-decoration: none;
  }
  .quick-icon {
    color: var(--text-secondary);
  }
  .quick-label {
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .sections-grid, .quick-links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
