---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const useCases = [
  {
    href: '/use-cases/faq',
    icon: '‚ùì',
    title: 'FAQ & Support',
    description: 'Turn resolved Discord threads into a searchable FAQ. Help users find answers without asking again.',
    benefits: ['Reduce support load', 'SEO-indexed answers', 'Auto-updated content'],
  },
  {
    href: '/use-cases/knowledge-base',
    icon: 'üìö',
    title: 'Knowledge Base',
    description: 'Build comprehensive documentation from your Discord discussions. Organize by tags and categories.',
    benefits: ['Structured content', 'Full-text search', 'Tag-based navigation'],
  },
  {
    href: '/use-cases/changelog',
    icon: 'üìã',
    title: 'Changelog',
    description: 'Publish updates and announcements from Discord to a timeline. Keep your community informed.',
    benefits: ['Timeline view', 'RSS feeds', 'Version tagging'],
  },
  {
    href: '/use-cases/blog',
    icon: '‚úçÔ∏è',
    title: 'Community Blog',
    description: 'Transform Discord discussions into blog posts. Share community content with the wider web.',
    benefits: ['Article format', 'Author attribution', 'Social sharing'],
  },
  {
    href: '/use-cases/api-integration',
    icon: '‚öôÔ∏è',
    title: 'API Integration',
    description: 'Build custom applications using your Discord data. Full REST API with webhooks for real-time updates.',
    benefits: ['REST API access', 'Webhook events', 'Custom integrations'],
  },
];
---

<BaseLayout title="Use Cases - DiscordLink">
  <Header />

  <main>
    <div class="container">
      <header class="page-header">
        <h1>Use Cases</h1>
        <p>See how teams use DiscordLink to get more from their Discord content.</p>
      </header>

      <div class="use-cases-grid">
        {useCases.map((useCase) => (
          <a href={useCase.href} class="use-case-card">
            <span class="use-case-icon">{useCase.icon}</span>
            <h2>{useCase.title}</h2>
            <p class="description">{useCase.description}</p>
            <ul class="benefits">
              {useCase.benefits.map((benefit) => (
                <li>{benefit}</li>
              ))}
            </ul>
            <span class="learn-more">Learn more ‚Üí</span>
          </a>
        ))}
      </div>

      <section class="cta-section">
        <h2>Not sure which approach fits?</h2>
        <p>DiscordLink is flexible. You can combine multiple use cases or build something entirely custom with the API.</p>
        <div class="cta-buttons">
          <a href="/quickstart" class="btn btn-primary">Get Started</a>
          <a href="/docs/api" class="btn btn-secondary">Explore the API</a>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  main {
    padding-top: 120px;
    padding-bottom: 4rem;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .use-case-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    text-decoration: none;
    color: var(--text);
    transition: all 0.2s;
  }
  .use-case-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }
  .use-case-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 1rem;
  }
  .use-case-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  .benefits {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .benefits li {
    background: var(--bg-tertiary);
    padding: 0.35rem 0.75rem;
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }
  .learn-more {
    color: var(--accent);
    font-weight: 500;
  }

  .cta-section {
    text-align: center;
    background: var(--bg-secondary);
    border-radius: 16px;
    padding: 3rem;
  }
  .cta-section h2 {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }
  .cta-section p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }
  .btn-primary {
    background: var(--accent);
    color: white;
  }
  .btn-primary:hover {
    text-decoration: none;
    transform: translateY(-2px);
  }
  .btn-secondary {
    background: var(--bg-card);
    border: 1px solid var(--border);
    color: var(--text);
  }
  .btn-secondary:hover {
    text-decoration: none;
    border-color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .use-cases-grid {
      grid-template-columns: 1fr;
    }
    .cta-buttons {
      flex-direction: column;
    }
  }
</style>
