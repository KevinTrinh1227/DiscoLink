---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { blogPosts } from '../../data/mock';

export function getStaticPaths() {
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<BaseLayout title={post.title} description={post.excerpt}>
  <article class="blog-post">
    <a href="/blog" class="back-link">Back to Blog</a>

    <header>
      <div class="meta">
        <span class="date">{new Date(post.publishedAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
        <span class="author">by <strong>{post.author.username}</strong></span>
      </div>
      <h1>{post.title}</h1>
      <div class="tags">
        {post.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="content" set:html={post.content.replace(/\n/g, '<br/>').replace(/## (.*)/g, '<h2>$1</h2>').replace(/### (.*)/g, '<h3>$1</h3>').replace(/- (.*)/g, '<li>$1</li>').replace(/`([^`]+)`/g, '<code>$1</code>')} />
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 720px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--text-secondary);
  }

  .back-link:hover {
    color: var(--accent);
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .meta {
    display: flex;
    gap: 0.75rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--bg-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    font-size: 0.8rem;
    color: var(--text-secondary);
  }

  .content {
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .content :global(h2) {
    color: var(--text);
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  .content :global(h3) {
    color: var(--text);
    font-size: 1.2rem;
    margin: 1.5rem 0 0.75rem;
  }

  .content :global(li) {
    margin-left: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .content :global(code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
  }
</style>
