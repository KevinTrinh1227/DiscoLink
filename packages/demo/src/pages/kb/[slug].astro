---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { kbArticles } from '../../data/mock';

export function getStaticPaths() {
  return kbArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
---

<BaseLayout title={article.title} description={`Knowledge Base: ${article.title}`}>
  <article class="kb-article">
    <a href="/kb" class="back-link">Back to Knowledge Base</a>

    <header>
      <span class="category">{article.category}</span>
      <h1>{article.title}</h1>
      <div class="meta">
        <span>by <strong>{article.author.username}</strong></span>
        <span class="separator">-</span>
        <span>Last updated {new Date(article.lastUpdated).toLocaleDateString()}</span>
      </div>
    </header>

    <div class="content" set:html={article.content.replace(/\n\n/g, '</p><p>').replace(/\n/g, '<br/>').replace(/# (.*)/g, '<h1>$1</h1>').replace(/## (.*)/g, '<h2>$1</h2>').replace(/```(\w*)\n([\s\S]*?)```/g, '<pre><code class="language-$1">$2</code></pre>').replace(/`([^`]+)`/g, '<code>$1</code>')} />
  </article>
</BaseLayout>

<style>
  .kb-article {
    max-width: 720px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--text-secondary);
  }

  .back-link:hover {
    color: var(--accent);
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .category {
    display: inline-block;
    background: var(--accent);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .separator {
    opacity: 0.5;
  }

  .content {
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .content :global(h1) {
    color: var(--text);
    font-size: 1.75rem;
    margin: 2rem 0 1rem;
  }

  .content :global(h2) {
    color: var(--text);
    font-size: 1.3rem;
    margin: 1.5rem 0 0.75rem;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }
</style>
