---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getServer, getThreads, getThread } from '../../lib/discolink';

export async function getStaticPaths() {
  const threads = await getThreads();
  return threads.map((thread) => ({
    params: { slug: thread.slug },
    props: { threadId: thread.id },
  }));
}

const { threadId } = Astro.props;
const thread = await getThread(threadId);
const server = await getServer();

const firstMessage = thread.messages[0];
const content = firstMessage?.content || '';

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title={`${thread.title} - ${server.name} Changelog`}
  description={content.slice(0, 160)}
  canonical={Astro.url.href}
>
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Changelog</a> &gt; {thread.title}
    </nav>

    <article>
      <header>
        <h1>{thread.title}</h1>
        <div class="meta">
          <span class="date">{formatDate(thread.createdAt)}</span>
          {thread.author && <span class="author">by {thread.author.username}</span>}
        </div>
        {thread.tags.length > 0 && (
          <div class="tags">
            {thread.tags.map((tag) => (
              <span class="tag">{tag.emoji || ''}{tag.name}</span>
            ))}
          </div>
        )}
      </header>

      <section class="content">
        {thread.messages.map((msg) => (
          <div class="message">
            {msg.contentHtml ? <Fragment set:html={msg.contentHtml} /> : <p>{msg.content}</p>}
          </div>
        ))}
      </section>
    </article>

    <footer>
      <a href="/">&larr; Back to Changelog</a>
    </footer>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .breadcrumb {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }
  article header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }
  h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }
  .meta {
    display: flex;
    gap: 1rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .tag {
    background: var(--bg-tertiary);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }
  .content {
    margin-bottom: 2rem;
  }
  .message {
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }
  .message p {
    white-space: pre-wrap;
  }
  footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }
</style>
