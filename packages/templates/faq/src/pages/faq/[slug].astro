---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getServer, getThreads, getThread } from '../../lib/discolink';

export async function getStaticPaths() {
  const threads = await getThreads();
  return threads
    .filter((t) => t.status === 'resolved')
    .map((thread) => ({
      params: { slug: thread.slug },
      props: { threadId: thread.id },
    }));
}

const { threadId } = Astro.props;
const thread = await getThread(threadId);
const server = await getServer();

const answer = thread.messages.find((m) => m.isAnswer) || thread.messages[0];
const answerText = answer?.content || '';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [{
    "@type": "Question",
    "name": thread.title,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": answerText,
    },
  }],
};

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title={`${thread.title} - ${server.name}`}
  description={answerText.slice(0, 160)}
  canonical={Astro.url.href}
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <div class="container">
    <nav class="breadcrumb">
      <a href="/">FAQ</a> &gt; {thread.title}
    </nav>

    <article class="faq-detail">
      <header>
        <h1>{thread.title}</h1>
        <div class="meta">
          {thread.author && <span>Asked by {thread.author.username}</span>}
          <span>{formatDate(thread.createdAt)}</span>
          <span class="status resolved">Resolved</span>
        </div>
        {thread.tags.length > 0 && (
          <div class="tags">
            {thread.tags.map((tag) => (
              <span class="tag">{tag.emoji || ''}{tag.name}</span>
            ))}
          </div>
        )}
      </header>

      <section class="messages">
        {thread.messages.map((msg) => (
          <div class:list={['message', { answer: msg.isAnswer }]}>
            <div class="message-header">
              <strong>{msg.author?.username || 'Unknown'}</strong>
              {msg.author?.isBot && <span class="bot-badge">BOT</span>}
              <span class="time">{formatDate(msg.createdAt)}</span>
              {msg.isAnswer && <span class="answer-badge">Answer</span>}
            </div>
            <div class="message-content">
              {msg.contentHtml ? <Fragment set:html={msg.contentHtml} /> : msg.content}
            </div>
          </div>
        ))}
      </section>
    </article>

    <footer>
      <p>Powered by <a href="https://discolink.site">DiscoLink</a></p>
    </footer>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .breadcrumb {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }
  .faq-detail header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }
  .meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }
  .status {
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  .status.resolved {
    background: #d1fae5;
    color: #065f46;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .tag {
    background: var(--bg-tertiary);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }
  .messages {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .message {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
  }
  .message.answer {
    border-left: 4px solid var(--success);
  }
  .message-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
  }
  .time {
    color: var(--text-secondary);
  }
  .bot-badge {
    background: var(--accent);
    color: white;
    font-size: 0.65rem;
    padding: 0.1rem 0.3rem;
    border-radius: 3px;
  }
  .answer-badge {
    background: var(--success);
    color: white;
    font-size: 0.75rem;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    margin-left: auto;
  }
  .message-content {
    line-height: 1.7;
    white-space: pre-wrap;
  }
  footer {
    text-align: center;
    padding: 2rem 0;
    margin-top: 2rem;
    color: var(--text-secondary);
    border-top: 1px solid var(--border);
  }
</style>
