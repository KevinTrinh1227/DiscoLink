---
export interface Props {
  title: string;
  slug: string;
  excerpt: string;
  date: string;
}

const { title, slug, excerpt, date } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
});
---

<article class="article-card">
  <h3><a href={`/articles/${slug}`}>{title}</a></h3>
  <p class="excerpt">{excerpt}</p>
  <span class="date">Updated {formattedDate}</span>
</article>

<style>
  .article-card {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
  }
  h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  h3 a {
    color: var(--text-primary);
  }
  h3 a:hover {
    color: var(--accent);
  }
  .excerpt {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .date {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
</style>
