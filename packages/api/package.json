{
  "name": "@discord-forum-api/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:unit": "vitest run --testPathPattern=unit",
    "test:int": "vitest run --testPathPattern=integration",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@discord-forum-api/db": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "dotenv": "^17.2.3",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  }
}
